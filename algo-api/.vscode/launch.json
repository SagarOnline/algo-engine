{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backtest",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/algo/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Algo API",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/algo/app.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Tests with Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/tests",
        "--cov=src",
        "--cov=tests",
        "--cov-report=xml",
        "--cov-report=html",
        "--cov-report=term-missing",
        "-v",
        "-s"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTEST_CURRENT_TEST": ""
      }
    }
  ]
}